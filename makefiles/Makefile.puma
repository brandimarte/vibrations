CFLAGS   = -O3 -axSSE4.1 -ip -mp1 -Wall
FPPFLAGS = 
MKL      = /opt/intel/composer_xe_2013.4.183/mkl
MKLLIBS  = $(MKL)/lib/intel64/libmkl_intel_lp64.a \
           $(MKL)/lib/intel64/libmkl_sequential.a \
           $(MKL)/lib/intel64/libmkl_core.a
LDLIBS   = -Wl,--start-group $(MKLLIBS) -Wl,--end-group
INCFLAGS = -I. -I$(MKL)/include

RM = /bin/rm -f
CC = icc

#  *****************************************************  #

.PHONY: all clean

#  *****************************************************  #

.c.o:
	$(CC) $(CFLAGS) -c $(INCFLAGS) $(FPPFLAGS) $*.c

.c:
	make $*.o
	$(CC) $(CFLAGS) $(INCFLAGS) -o $* $*.o $(LDLIBS) 

#  *****************************************************  #

all: vibrations

vibrations: Check.o Utils.o Phonon.o main.o
	$(CC) $(CFLAGS) $(INCFLAGS) -o vibrations \
	Check.o Utils.o Phonon.o main.o $(LDLIBS) 

#  *****************************************************  #

clean:
	$(RM) *~ \#~ .\#* *.o vibrations core a.out

